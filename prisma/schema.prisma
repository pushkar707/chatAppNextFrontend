datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  username  String     @unique
  imageUrl  String?
  sender Receiver[] @relation("UserToReceiver")
  receiver Receiver[] @relation("UserToSender")


  @@fulltext([username])
}

model Receiver {
  id         String @id @default(uuid())
  sender   User   @relation("UserToSender", fields: [senderId], references: [id], onDelete: NoAction)
  senderId String 
  reciever   User   @relation("UserToReceiver", fields: [receiverId], references: [id], onDelete: NoAction)
  receiverId String 

  chats Message[]
  @@index([receiverId])
  @@index([senderId])
  @@unique([senderId,receiverId])
}

model Message {
  id         String    @id @default(uuid())
  message    String
  time       DateTime  @default(now())
  Receiver   Receiver? @relation(fields: [receiverId], references: [id], onDelete: NoAction)
  receiverId String?

  @@index([receiverId])
}
